%h2.text-center= "SIGN UP"

.row
  .col-xs-12
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

      .field.form-group.row
        .col-sm-2
        = f.label :email, class: "col-sm-2 col-form-label"
        .col-sm-4
          = f.email_field :email, autofocus: true, class: "form-control"

      .field.form-group.row
        .col-sm-2
        = f.label "Password", class: "col-sm-2 col-form-label"
        .col-sm-4
          = f.password_field :password, autocomplete: "off", class: "form-control"

      .field.form-group.row
        .col-sm-2
        = f.label "Password confirmation", class: "col-sm-2 col-form-label"
        .col-sm-4
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"

      .field.form-group.row
        .col-sm-2
        = f.label "Full Name", class: "col-sm-2 col-form-label"
        .col-sm-4
          = f.text_field :full_name, class: "form-control"

      .field.form-group.row
        .col-sm-2
        = f.label "Gender", class: "col-sm-2 col-form-label"
        .col-sm-4
          = f.select(:gender, [["", nil],["Male", "Male"], ["Female", "Female"]], {}, { class: "form-control" })

      .field.form-group.row
        .col-sm-2
        = f.label "SSN", class: "col-sm-2 col-form-label"
        .col-sm-4
          = f.text_field :amka, class: "form-control"

      .actions.form-group.row.text-center
        = f.submit "Sign up", class: "btn btn-lg"
